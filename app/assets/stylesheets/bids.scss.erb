@-webkit-keyframes showin{
  from { opacity: 0;
        height: 0%}
  1% {display:block}
  to { opacity: 1;
        height: 100%}
 }
    @-moz-keyframes showin{   from { opacity: 0;
            height: 0%}
              1% {display:block}
      to { opacity: 1;
            height: 100%;
          display:block} }
     @-ms-keyframes showin{   from { opacity: 0;
             height: 0%}
               1% {display:block}
       to { opacity: 1;
             height: 100%} }
      @-o-keyframes showin{   from { opacity: 0;
              height: 0%}
                1% {display:block}
        to { opacity: 1;
              height: 100%} }
         @keyframes showin{   from { opacity: 0;
                 height: 0%}
                   1% {display:block}
           to { opacity: 1;
                 height: 100%} }



@-webkit-keyframes hidein{
  from { opacity: 1;
        height: 100%}
  99% {display:none}
  to { opacity: 0;
        height: 0;display:none}
 }
    @-moz-keyframes hidein{   from { opacity: 1;
            height: 100%}
      to { opacity: 0;
            height: 0;display:none} }
     @-ms-keyframes hidein{   from { opacity: 1;
             height: 100%}
       to { opacity: 0;
             height: 0;
           display:none} }
      @-o-keyframes hidein{   from { opacity: 1;
              height: 100%}

        to { opacity: 0;
              height: 0;
            display:none} }
         @keyframes hidein{   from { opacity: 1;
                 height: 100%}
           to { opacity: 0;
                 height: 0} }

.hovered{
     -webkit-animation: showin 0.5s ease-in ;
        -moz-animation: showin 0.5s ease-in ;
         -ms-animation: showin 0.5s ease-in ;
          -o-animation: showin 0.5s ease-in ;
             animation: showin 0.5s ease-in ;
             animation-fill-mode: forwards;
}
.leaved{
     -webkit-animation: hidein 1s ease-out ;
        -moz-animation: hidein 1s ease-out ;
         -ms-animation: hidein 1s ease-out ;
          -o-animation: hidein 1s ease-out ;
             animation: hidein 1s ease-out ;
             animation-fill-mode: forwards;
}

